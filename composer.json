{
  "name": "bitrix24/biconnector-extension",
  "description": "Bitrix24 BI Connector Extension for MySQL and PostgreSQL",
  "type": "project",
  "license": "MIT",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Bitrix24 Developer",
      "email": "developer@bitrix24.com"
    }
  ],
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "require": {
    "php": "^8.4",
    "ext-curl": "*",
    "ext-intl": "*",
    "ext-bcmath": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-pdo_pgsql": "*",
    "bitrix24/b24phpsdk": "^1.7.0",
    "monolog/monolog": "^3.5",
    "symfony/console": "^7.0",
    "symfony/dotenv": "^7.0",
    "symfony/event-dispatcher": "^7.0",
    "symfony/filesystem": "^7.0",
    "symfony/http-foundation": "^7.0",
    "symfony/cache": "^7.0",
    "doctrine/dbal": "^3.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.8",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse src --level=8",
    "cs-check": "phpcs src --standard=PSR12",
    "cs-fix": "phpcbf src --standard=PSR12"
  }
}

